<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <ImageButton
                android:id="@+id/btn_back_about"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_input_white"
                android:src="@android:drawable/ic_menu_revert"
                android:rotation="180"
                app:tint="@color/black"
                android:padding="10dp"
                android:elevation="2dp"
                android:contentDescription="Kembali" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_squircle_teal"
            android:elevation="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_flight_takeoff"
                app:tint="@color/white"
                android:contentDescription="Logo TravelKuy" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text="TravelKuy"
            android:textColor="#111827"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_chip_gray"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="Versi 1.0.0"
            android:textColor="#6B7280"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Â© 2025 AMELIA YUSMAN || ARIEL YUSUF ABIYASA.\nAll Rights Reserved."
            android:textAlignment="center"
            android:textColor="#9CA3AF"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0.1"
            android:text="HUBUNGI KAMI"
            android:textColor="#9CA3AF"
            android:textSize="12sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_contact_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:foreground="?android:attr/selectableItemBackground"> <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_circle_blue"
                android:backgroundTint="#E0F2F1"
                android:padding="5dp"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#00BF9A"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Kirim Email"
                    android:textColor="#374151"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#D1D5DB"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_contact_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#00BF9A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/stat_sys_phone_call"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="CHAT WHATSAPP"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>