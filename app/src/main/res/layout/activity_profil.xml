<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <View
            android:id="@+id/view_header"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/bg_gradient"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_back_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_circle_blue"
            android:backgroundTint="#40FFFFFF"
            android:src="@android:drawable/ic_menu_revert"
            android:rotation="180"
            android:padding="8dp"
            app:tint="@color/white"
            android:contentDescription="Kembali"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_circle_blue"
            android:backgroundTint="#40FFFFFF"
            android:src="@android:drawable/ic_menu_more"
            android:padding="8dp"
            app:tint="@color/white"
            android:contentDescription="Menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_main_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="70dp"
                android:paddingBottom="32dp"
                android:paddingHorizontal="24dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User "
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/black"
                    android:textSize="22sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRAVEL ENTHUSIAST"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#009688"
                    android:letterSpacing="0.1"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mahasiswa Teknik Informatika exploring the world one coordinate at a time."
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#757575"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/black"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TRIPS"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#9E9E9E"
                            android:textSize="11sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:background="#E0E0E0"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/black"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COUNTRIES"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#9E9E9E"
                            android:textSize="11sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:background="#E0E0E0"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.5k"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/black"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PHOTOS"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#9E9E9E"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="24dp"
                    android:text="My Account"
                    android:fontFamily="@font/poppins_bold"
                    android:backgroundTint="#009688"
                    app:icon="@android:drawable/ic_menu_compass"
                    app:iconGravity="textStart"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="12dp"
                    android:text="Account Settings"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#757575"
                    android:backgroundTint="#F5F5F5"
                    app:icon="@android:drawable/ic_menu_manage"
                    app:iconTint="#757575"
                    app:iconGravity="textStart"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toTopOf="@id/card_main_profile"
            app:layout_constraintTop_toTopOf="@id/card_main_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profil_saya"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_green"
            android:backgroundTint="#009688"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="@color/white"
            android:elevation="14dp"
            app:layout_constraintBottom_toBottomOf="@id/card_profile_image"
            app:layout_constraintEnd_toEndOf="@id/card_profile_image"
            android:contentDescription="Edit Foto"/>


        <TextView
            android:id="@+id/tv_recent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECENT JOURNEYS"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#9E9E9E"
            android:letterSpacing="0.1"
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_main_profile"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_journey_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_label">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_circle_light_blue"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_send"
                    app:tint="#1E88E5"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trip to Bali"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 weeks ago • 45 photos"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_play"
                    android:rotation="90"
                    app:tint="#BDBDBD"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_journey_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/card_journey_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_circle_light_orange"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="#FB8C00"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bromo Mountain"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 month ago • 120 photos"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_play"
                    android:rotation="90"
                    app:tint="#BDBDBD"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_back_to_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="←  Kembali Ke Menu"
            android:background="@android:color/transparent"
            android:textColor="#9E9E9E"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@id/card_journey_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>